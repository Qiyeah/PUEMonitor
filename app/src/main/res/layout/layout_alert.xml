<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/colorPrimary">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scrollbars="none">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备状态: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <Switch
                    android:id="@id/eState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOff="关闭"
                    android:textOn="打开"/>/>

            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备类型: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <Spinner
                    android:id="@id/eType"
                    android:entries="@array/equipment_type"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备名称: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/eName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="端口号: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/port"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="COM1"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="波特率: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/rate"
                    style="@style/NumText"
                    android:hint="9600"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备通信地址: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/addr"
                    android:hint="01"
                    style="@style/NumText"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="超时时间（毫秒）: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/timeout"
                    style="@style/NumText"
                    android:text="200"

                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="数据位: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/data"
                    style="@style/NumText"
                    android:text="8"

                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停止位: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/stop"
                    style="@style/NumText"
                    android:text="1"

                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奇偶校验位: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/parity"
                    style="@style/NumText"
                    android:text="0"

                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="采集间隔（秒）: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/delayed"
                    style="@style/NumText"
                    android:text="0"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控件按钮宽度（dp）: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/eWidth"
                    style="@style/NumText"
                    android:text="200"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="控件按钮高度（dp）: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/eHeight"
                    style="@style/NumText"
                    android:text="100"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X坐标: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/xAxis"
                    style="@style/NumText"
                    android:text="100"
                    />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Y坐标: "
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <EditText
                    android:id="@id/yAxis"
                    style="@style/NumText"
                    android:text="100"
                    />
            </TableRow>
        </TableLayout>
    </ScrollView>
</FrameLayout>
