<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    android:id="@+id/main_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_btn_info"
        android:background="@drawable/info"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="61%"
        app:layout_marginTopPercent="7%"
        app:layout_widthPercent="8.5%"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_btn_power"
        android:layout_gravity="center"
        android:background="@drawable/power_normal"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="50.5%"
        app:layout_marginTopPercent="21%"
        app:layout_widthPercent="8.5%"
        />

    <Button
        android:id="@+id/main_btn_saving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/saving_normal"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="46.5%"
        app:layout_marginTopPercent="45%"
        app:layout_widthPercent="8.5%"/>


    <Button
        android:id="@+id/main_btn_honor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/honor_unable"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="50%"
        app:layout_marginTopPercent="67.5%"
        app:layout_widthPercent="8.5%"/>
    <Button
        android:id="@+id/main_btn_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/support_icon"
        app:layout_heightPercent="15%"
        app:layout_marginLeftPercent="61%"
        app:layout_marginTopPercent="82%"
        app:layout_widthPercent="8.5%"
        />
    <Button
        android:id="@+id/main_btn_pue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/pue_value_bg_nocircle"
        android:gravity="center"
        android:text="PUE:0.00"
        android:textColor="#fff"
        android:textSize="120sp"
        app:layout_heightPercent="55%"
        app:layout_marginLeftPercent="57.8%"
        app:layout_marginTopPercent="22.8%"
        app:layout_widthPercent="31%"
        />


</android.support.percent.PercentRelativeLayout>
